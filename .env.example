# ─── POLYMARKET ───────────────────────────────────────────────────────────────
# API key from https://clob.polymarket.com
POLY_API_KEY=
POLY_API_SECRET=
POLY_API_PASSPHRASE=
# Private key for signing (ECDSA) — KEEP THIS SECRET
POLY_PRIVATE_KEY=

# ─── MARKETS ─────────────────────────────────────────────────────────────────
# Assets to monitor (comma-separated). Supported: BTC, ETH, SOL
# Each asset × window combination runs its own discovery + strategy instance.
ASSETS=BTC
# Window sizes in minutes (comma-separated). Supported: 5, 15
WINDOWS=5
# Override Binance symbols if needed (defaults: btcusdt, ethusdt, solusdt, xrpusdt)
# BTC_SYMBOL=btcusdt
# ETH_SYMBOL=ethusdt
# SOL_SYMBOL=solusdt
# XRP_SYMBOL=xrpusdt

# ─── RISK ────────────────────────────────────────────────────────────────────
BANKROLL=1300
MAX_BET_FRACTION=0.04
ENTRY_THRESHOLD=0.05        # 5m markets (raised from 3% — thin books near noise floor)
ENTRY_THRESHOLD_15M=0.03   # 15m markets (stay at 3% — more liquidity near 50¢)

# Per-asset daily vol (used as Black-Scholes sigma seed until realized-vol EMA warms up)
BTC_VOL=0.015
ETH_VOL=0.020
SOL_VOL=0.030
XRP_VOL=0.035

MAX_POSITION_USD=100
MAX_OPEN_POSITIONS=8
COOLDOWN_MS=3000
DAILY_LOSS_LIMIT=50
PROFIT_TARGET_PCT=0.03
STOP_LOSS_PCT=0.15

# Certainty-arb (last 90s of window): higher edge required, smaller position
# CERTAINTY_THRESHOLD=0.15
# CERTAINTY_MAX_FRACTION=0.02

# ─── EXECUTION ───────────────────────────────────────────────────────────────
DRY_RUN=true
LOG_LEVEL=info
SLIPPAGE_BPS=15
FEE_BPS=20
ORDER_TYPE=GTC

# ─── ALERTS (optional) ──────────────────────────────────────────────────────
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
